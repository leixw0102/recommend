<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>

    <!--所有算法的输入 -->
    <property>
        <name>hdfs.directory.input</name>
        <value>/icntv/recommend-stb/cms_base/%tF/</value>
    </property>
    <!-- cf 最终输入目录,userId,itemId,pref -->
    <property>
        <name>hdfs.directory.cf.input</name>
        <value>/icntv/recommend-stb/algorithm/cf/input/%tF</value>
    </property>
    <property>
        <name>hdfs.directory.cf.temp</name>
        <value>/icntv/recommend-stb/algorithm/cf/temp/%tF</value>
    </property>
    <!-- cf算法 输出目录 -->
    <property>
        <name>hdfs.directory.cf.output</name>
        <value>/icntv/recommend-stb/algorithm/cf/output/%tF</value>
    </property>
    <!-- 算法参数 -->
    <!-- -->
    <property>
        <name>icntv.cf.recommend.num.per.user</name>
        <value>20</value>
        <description>Number of recommendations per user</description>
    </property>
    <property>
        <name>icntv.cf.recommend.similarityClassname</name>
        <value>SIMILARITY_EUCLIDEAN_DISTANCE</value>
    </property>
</configuration>
<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>

    <!--所有算法的输入 -->
    <property>
        <name>hdfs.directory.input</name>
        <value>/icntv/recommend-stb/cms_base/%tF</value>
    </property>
    <!-- 关联算法 最终输入 -->
    <property>
        <name>hdf.directory.correlate.growth.input</name>
        <value>/icntv/recommend-stb/algorithm/correlate/input/%tF</value>
    </property>

    <property>
        <name>hdf.directory.correlate.growth.temp</name>
        <value>/icntv/recommend-stb/algorithm/correlate/temp/%tF</value>
    </property>
    <!-- 关联输出目录 -->
    <property>
        <name>hdfs.directory.correlate.output</name>
        <value>/icntv/recommend-stb/algorithm/correlate/output/%tF</value>
    </property>

    <!-- 关联算法 先关参数  -->
    <property>
        <name>icntv.algorithm.correlate.minSupport</name>
        <value>100</value>
    </property>

    <property>
        <name>icntv.algorithm.correlate.result.minSup</name>
        <value>0.006</value>
    </property>

    <property>
        <name>icntv.algorithm.correlate.result.conf</name>
        <value>0.3</value>
    </property>
</configuration>